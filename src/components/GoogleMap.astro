---
interface Props {
  src: string;
}

const { src } = Astro.props;
---

<div style="max-width: 500px; margin: 0 auto; margin-bottom: 3em; aspect-ratio: 5/4;">
	<iframe
		src={src}
		style="border:0;width:100%;height:100%;display:block;"
		allowfullscreen=""
		loading="lazy"
		referrerpolicy="no-referrer-when-downgrade"
		class="mx-auto"
	></iframe>
</div>
