---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

import '../styles/global.css'

interface Props extends CollectionEntry<'shorts'>['data'] {
	prevPost?: CollectionEntry<'shorts'> | null;
	nextPost?: CollectionEntry<'shorts'> | null;
}

const { title, description, pubDate, updatedDate, heroImage, prevPost, nextPost } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
				max-width: 100vw;
				background: linear-gradient(to bottom, rgb(var(--gray-light), 0.15), transparent);
				padding: 2rem 0;
				margin-bottom: 1rem;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 0;
				width: 100%;
				max-width: 1200px;
				height: auto;
				max-height: 400px;
				object-fit: cover;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			}
			@media (min-width: 1250px) {
				.hero-image img {
					border-radius: 8px;
				}
			}
			@media (max-width: 720px) {
				.hero-image {
					padding: 0;
					margin-bottom: 0;
					background: none;
				}
				.hero-image img {
					max-height: 200px;
					border-radius: 0;
					box-shadow: none;
					max-width: 100vw;
				}
			}
			.prose {
				width: 800px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 0 1rem;
				color: rgb(var(--gray-dark));
				font-size: 18px;
				line-height: 1.7;
			}
			@media (max-width: 720px) {
				.prose {
					padding: 0 1rem;
					max-width: 100%;
				}
			}
			.title {
				margin-bottom: 2em;
				padding: 1.5em 0 1em 0;
				text-align: center;
				line-height: 1.2;
			}
			.title h1 {
				margin: 0.5em 0;
				font-size: 2.5rem;
				font-weight: 700;
				line-height: 1.2;
			}
			.date {
				margin-bottom: 0;
				color: rgb(var(--gray));
				font-size: 0.875rem;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
			.last-updated-on {
				font-style: italic;
				font-size: 0.875rem;
				margin-top: 0.5em;
			}
			@media (max-width: 720px) {
				.title h1 {
					font-size: 1.75rem;
				}
			}
			.post-navigation {
				display: flex;
				justify-content: space-between;
				gap: 2rem;
				margin-top: 4rem;
				padding-top: 2rem;
				border-top: 1px solid rgb(var(--gray-light));
			}
			.nav-link {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				padding: 1rem;
				border-radius: 8px;
				background: rgb(var(--gray-light), 0.2);
				border: 1px solid rgb(var(--gray-light), 0.5);
				transition: all 0.2s ease;
				text-decoration: none;
				flex: 1;
				max-width: 45%;
			}
			.nav-link:hover {
				background: rgb(var(--gray-light), 0.3);
				border-color: var(--accent);
				transform: translateY(-2px);
				box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			}
			.nav-link.prev {
				text-align: left;
			}
			.nav-link.next {
				text-align: right;
				margin-left: auto;
			}
			.nav-label {
				font-size: 0.875rem;
				color: var(--accent);
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
			.nav-title {
				color: rgb(var(--black));
				font-weight: 600;
				font-size: 1rem;
			}
			@media (max-width: 720px) {
				.post-navigation {
					flex-direction: column;
					gap: 1rem;
					margin-top: 3rem;
				}
				.nav-link {
					max-width: 100%;
				}
				.nav-link.next {
					margin-left: 0;
				}
			}
		</style>
	</head>

	<body>
		<Header />
				<div class="hero-image">
					{heroImage && <Image layout="constrained"  src={heroImage} alt="" />}
				</div>
			<main>
			<article>

				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />

					<nav class="post-navigation">
						{prevPost && (
							<a href={`/shorts/${prevPost.id}/`} class="nav-link prev">
								<span class="nav-label">← Previous</span>
								<span class="nav-title">{prevPost.data.title}</span>
							</a>
						)}
						{nextPost && (
							<a href={`/shorts/${nextPost.id}/`} class="nav-link next">
								<span class="nav-label">Next →</span>
								<span class="nav-title">{nextPost.data.title}</span>
							</a>
						)}
					</nav>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
